<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/shapes" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control"></input>
    </div>
    <div class="form-group">
        <label for="vertices">Vertices</label>
        <input type="vertices" name="vertices" class="form-control"></input>
    </div>
    <input type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>
<h4>Shapes</h4>
<ul class="list-group">
    {{#each shapes}}
    <li class="list-group-item">
        {{this.name}}: {{this.vertices}}
    </li>
    {{/each}}
</ul>